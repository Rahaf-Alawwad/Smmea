
<div class="main-container">

    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form  method="POST" action="/signup">
                <h1 class="sign-h1">إنشاء حساب</h1>

                
                <input name="name" type="text" class="form-control" placeholder=" الاسم" required>
                <input name="emailAddress" type="email" class="form-control" placeholder=" البريد الإلكتروني" required>
                <input name="password" type="password" class="form-control" placeholder=" الرقم السري" required>


                <table style="width: 100%; height: 20%;">

                    <tr>
                        <td>
                            <label>نوع الحساب</label>
                        </td>
                        <td>
                            <input type="radio" name="type" value="teacher">

                            <label for="teacher">معلمـ/ـة</label>
                        </td>
                        <td>
                            <input type="radio" name="type" value="student">

                            <label for="student">طالبـ/ـة</label>
                        </td>
                    </tr>
                </table>
                <button style="margin-top:20px;border-radius: 20px;">تسجيل</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form  method="POST" action="/signin">
                <h1 class="sign-h1">تسجيل دخول</h1>

              
                <input name="emailAddress" type="email" class="form-control" placeholder=" البريد الإلكتروني" required>
                <input name="password" type="password" class="form-control" placeholder=" الرقم السري" required>

                <button style="margin-top:20px;border-radius: 20px;"> تسجيل دخول</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1 class="sign-h1">اهلا بك مرة اخرى</h1>
                    <p>لإستمرار رحلتك من هنا</p>
                    <button class="ghost" style="border-radius: 20px;" id="signIn">تسجيل الدخول</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1 class="sign-h1">اهلا بالضيف</h1>
                    <p>ادخل بياناتك وابدا رحلتك لحفظ القران</p>
                    <button class="ghost" style="border-radius: 20px;" id="signUp">تسجيل</button>
                </div>
            </div>
        </div>
    </div>

</div>
<script>

    const signUpButton = document.getElementById('signUp');
    const signInButton = document.getElementById('signIn');
    const container = document.getElementById('container');

    signUpButton.addEventListener('click', () => {

        container.classList.add("right-panel-active");
    });

    signInButton.addEventListener('click', () => {
        container.classList.remove("right-panel-active");
    });
</script>